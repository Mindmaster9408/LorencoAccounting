# =============================================================================
# Accounting Ecosystem - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# MOCK MODE â€” Set to true to run without Supabase (in-memory test data)
# Set to false when you have real Supabase credentials
# See TEST-CREDENTIALS.md for test login accounts
MOCK_MODE=true

# Supabase Connection (not needed when MOCK_MODE=true)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key-here
SUPABASE_ANON_KEY=your-anon-key-here

# JWT Authentication
JWT_SECRET=change-this-to-a-strong-random-secret-min-32-chars

# Module Activation (true = enabled, false = disabled)
MODULE_POS_ENABLED=true
MODULE_PAYROLL_ENABLED=false
MODULE_ACCOUNTING_ENABLED=false

# Server Configuration
PORT=3000
NODE_ENV=development

# Frontend URLs (for CORS)
FRONTEND_POS_URL=http://localhost:5173
FRONTEND_PAYROLL_URL=http://localhost:5174

# Optional: Default company creation (set to false after first run)
CREATE_DEFAULT_COMPANY=false
